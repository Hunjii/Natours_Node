extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Sign Up account for free
      form.form.form--signup
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required)
        .form__group
          label.form__label(for='name') Full Name
          input#name.form__input(type='text', placeholder='full name', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          label.form__label(for='password') Password Confirm
          input#password-confirm.form__input(type='password', placeholder='••••••••', required)
        label.container
          | Sign up as a user
          input(type="radio" checked="checked" name="typeUser" value='user')
          span.checkmark
        label.container
          | Sign up as a host
          input(type="radio" name="typeUser" value='host')
          span.checkmark

        .form__group
          button.btn.btn--green Sign Up